<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Removed action/title bar throughout entire app -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--Sets global status bar color-->
        <item name="android:statusBarColor">@color/NCTGold</item>
        <!-- Sets global button style -->
        <item name="android:buttonStyle">@style/CalibriButtonStyle</item>
    </style>

    <!-- Sets RobotoButton to wireframe's style -->
    <style name="CalibriButtonStyle">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Used for email dialogs -->
    <style name="EmailDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/NCTBlue</item>
    </style>

    <!--Used for the receive call activity -->
    <style name="AppTheme.coloredBar">
        <item name="android:statusBarColor">@color/CallScreenGreen</item>
    </style>
</resources>
